import os
                      
app_name = 'stompc'
build_path = 'build'
app_path = build_path + '/app'

VariantDir(app_path, 'src')   
app = Program(os.path.join(app_path, app_name), Glob(app_path + '/*.c'))    
Alias('build', app)

clean = Command('clean', '', 'rm -Rf ' + build_path) 
AlwaysBuild(clean)

Default(app)